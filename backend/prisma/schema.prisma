generator client {
  provider = "prisma-client-js"
  PRISMA_CLIENT_ENGINE_TYPE="binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String?
  password String
  blogs    Blog[]
}

model Blog {
  id        String   @id @default(uuid())
  title     String   
  content   String
  thumbnail String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}